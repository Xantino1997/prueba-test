{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node@2.3.0"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://api.example.com"
  },
  "rewrites": [
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"
    }
  ]
}
